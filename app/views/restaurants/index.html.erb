<h1>Welcome to restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
      <th>Reviews</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.address %></td>
        <td><%= r.phone_number %></td>
        <td><%= r.category %></td>
      </tr>
      <% @restaurant.review %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new restaurant!', new_restaurant_path %>
